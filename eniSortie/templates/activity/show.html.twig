{% extends 'model.html.twig' %}

{% block title %}Activity{% endblock %}

{% block main %}
    <h1>Activity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ activity.startDate ? activity.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ActivityDuration</th>
                <td>{{ activity.activityDuration }}</td>
            </tr>
            <tr>
                <th>RegistrationDeadline</th>
                <td>{{ activity.registrationDeadline ? activity.registrationDeadline|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NbRegistration</th>
                <td>{{ activity.nbRegistration }}</td>
            </tr>
            <tr>
                <th>ActivityDescription</th>
                <td>{{ activity.activityDescription }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_activity_index') }}">back to list</a>

    <a href="{{ path('app_activity_edit', {'id': activity.id}) }}">edit</a>

    {{ include('activity/_delete_form.html.twig') }}
{% endblock %}

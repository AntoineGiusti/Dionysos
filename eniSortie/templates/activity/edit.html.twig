{% extends 'model.html.twig' %}
{% block title %}
    {{ parent() }}


{% endblock %}


{% block main %}
    {% include('navbar.html.twig') %}
    {% block body %}
        <div class="container-xl px-4 mt-4">
            <hr class="mt-0 mb-4">
            <div class="row">
                {#                Message flash de réussite#}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                <div class="col-xl-4">
                    <img class="img-fluid" src="{{ asset ('img/idea.jpg')}}" alt="Icon">
                </div>

                <div class="col-xl-8">
                    <div class="card mb-4">
                        <div class="card-header"><h3>Modifier l'activité</h3></div>
                        <div class="card-body">

                            {{ form_start(activity) }}

                            {{ form_row(activity.name) }}
                            {{ form_row(activity.startDate) }}
                            {{ form_row(activity.activityDuration) }}
                            {{ form_row(activity.registrationDeadline) }}

                            {{ form_row(activity.nbRegistration) }}
                            {{ form_row(activity.activityDescription) }}
                            {{ form_row(activity.location) }}
                            {{ form_row(activity.status) }}
                            {{ form_row(activity.campus) }}
                            {# {{ form_row(activity.organizer)}} #}
                            {# {{ form_row(activity.participant)}} #}

                            {{ form_widget(activity) }}
                            <div class="align-items-center">
                                <button type="submit" class="btn btn-primary">Modifier l'activité</button>
                                <a href="{{ path('home') }}" class="btn btn-secondary">Annuler</a>
                            </div>
                        </div>

                        {{ form_end(activity) }}
                    </div>
                </div>
            </div>
        </div>


    {% endblock %}

    {% include('footer.html.twig') %}

{% endblock %}
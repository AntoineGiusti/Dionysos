                            <div class="col-md-4">
                                <form action="post">



                                    <input type="text" class="form-control border-0 py-3" placeholder="Rechercher">
                            </div>
                            <div class="col-md-4">
                                <select class="form-select border-0 py-3">
                                    <option selected>etats</option> 


                               
                                    {# <option value="1"> {{activity.status}}</option> #}
